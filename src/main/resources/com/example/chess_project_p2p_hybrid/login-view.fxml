<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="420.0" prefWidth="620.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.chess_project_p2p_hybrid.client.controller.LoginController">

    <VBox alignment="CENTER" layoutX="40.0" layoutY="26.0" prefHeight="420.0" prefWidth="582.0" spacing="12"
          style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298); -fx-padding: 25; -fx-background-radius: 12;"
          AnchorPane.bottomAnchor="26.799999999999955" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0"
          AnchorPane.topAnchor="26.0">

        <Label style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" text="Cờ vua P2P Hybrid"/>
        <Label style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14px;"
               text="Nhập tên và thông tin server để đăng nhập"/>

        <TextField fx:id="playerNameField" maxWidth="320" promptText="Tên người chơi"
                   style="-fx-background-radius: 8; -fx-padding: 10;"/>

        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="hostField" prefWidth="180" promptText="Máy chủ"
                       style="-fx-background-radius: 8; -fx-padding: 10;" text="127.0.0.1"/>
            <TextField fx:id="portField" prefWidth="100" promptText="Cổng"
                       style="-fx-background-radius: 8; -fx-padding: 10;" text="9999"/>
        </HBox>

        <Button fx:id="connectButton" maxWidth="200"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8;"
                text="Kết nối"/>

        <Label fx:id="statusLabel" textFill="white"/>
    </VBox>

</AnchorPane>
